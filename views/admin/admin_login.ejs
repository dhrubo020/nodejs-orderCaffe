
<%- include admin_header %>
  <div class="container" style="background-color: #405D9D">
            <div class="card bg-light">
                    <article class="card-body mx-auto" style="max-width: 400px;">
                        <h4 class="card-title mt-3 text-center">Admin Login</h4>
                        
    
                     <div class="form-group input-group">
                    <% if (message.length > 0) { %>
                      <div class="alert alert-danger col-sm-12"><%= message %></div>
                    <% } %>
                     </div>
    
                    <form  class="form-horizontal" role="form" method="post" action="/admin">
                               
                        <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                 </div>
                            <input id="" type="text" class="form-control" name="userid" value="" placeholder="User ID" required>                                       
                        </div>
                           
                        <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                    <input id="login-password" type="password" class="form-control" name="password" placeholder="password" required>
                                </div>
                                
                        <br><br>
                                <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                            
                        </form>
    
                </article>
            </div> <!-- card.// -->
            
            </div> 
            <!--container end.//-->
            
    <br><br><br><br><br><br> <br><br>
    
    </body>
    </html>
    <%- include admin_foot %>