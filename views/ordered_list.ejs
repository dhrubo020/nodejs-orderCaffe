<%- include partials/head %>

<% if (items.length > 0) {%>
    <div class="row col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <form class="form-horizontal" action="/confirmOrder" method="POST">
            <table class="table table-bordered table-dark">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Quantity</td>
                        <td>Unit price</td>
                        <td>Total</td>
                    </tr>
                </thead>
                <tbody>
        <% for(var i = 0; i < items.length-1; i++) { %>
                    <tr>
                        <td> <%= items[i].name %> </td>
                        <td> <%= items[i].quantity %> </td>
                        <td> <%= items[i].unit_price %> </td>
                        <td> <%= items[i].total_price %> </td>
                    </tr>
                    <% }; %>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Total price of all items: </td>
                        <td> <%= items[items.length-1].grand_total_price %></td>
                    </tr>
                </tbody>

            </table>
            <div class="form-controll">
                <input type="text" name="address" placeholder="Enter Delivery address">
            </div>
            <div class="form">
                <input type="text" name="phone" placeholder="Enter your current phone number">
            </div>
            <div>
              <button type="submit" class="btn btn-primary">Confirm</button>  
            </div>
            
            
            
        </form>
          
    </div>
  <% } else { %>
    <p class="text-center">No items found.</p>
  <% } %>

<%- include partials/foot %>