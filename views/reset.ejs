<%- include header %>
        <div class="container">   
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                   
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Reset Password</div>
                        <!--<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>-->
                    </div>    
 
                    <div style="padding-top:30px" class="panel-body" >
                        <% if (message.length > 0) { %>
                          <div class="alert alert-danger col-sm-12"><%= message %></div>
                        <% } %>
                           
                        <form id="loginform" class="form-horizontal" role="form" method="post" action="/reset">
                            <input type="hidden" value="<%=data[0].email %>" class="form-control" name="email" required>  
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password1" placeholder="New password" required>
                            </div>
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password2" placeholder="Confirm-password" required>
                            </div>       
 
                                <div style="margin-top:10px" class="form-group">
                                    <div class="col-sm-12 controls">
                                      <button id="btn-login" type="submit" class="btn btn-success">Login  </button>
                                    </div>
                                    
                            </form>    
 
 
 
                        </div>                    
                    </div> 
        </div>
       
    </div>
</body>
</html>

